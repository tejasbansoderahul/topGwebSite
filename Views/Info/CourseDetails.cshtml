@{
    ViewData["Title"] = "Course Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Ensure body takes up full height and flex container */
    html, body {
        height: 100%;
        margin: 0;
        display: flex;
        flex-direction: column;
        background-color: #15244c; /* Navy blue background */
        color: #ffffff; /* White text color */
        font-family: Arial, sans-serif; /* Ensure consistent font */
    }

        /* Flex-grow for main content area to push footer down */
        body > .container, .d-flex.flex-column {
            flex: 1;
        }

    /* Custom card styling */
    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #1a3365; /* Darker shade of navy */
        color: #ffffff; /* White text color */
        transition: transform 0.3s ease; /* Add transform transition */
    }

        .card:hover {
            transform: translateY(-5px); /* Lift card on hover */
        }

    .card-header {
        background-color: #003366; /* Dark navy blue */
        color: #ffffff;
        border-radius: 10px 10px 0 0;
        padding: 1rem;
        text-transform: uppercase; /* Uppercase text */
    }

    .card-footer {
        background-color: #1a3365; /* Darker shade of navy */
        border-radius: 0 0 10px 10px;
        padding: 1rem;
    }

    .btn-primary {
        background-color: #ff6347;
        border: none;
    }

        .btn-primary:hover {
            background-color: #e5533d;
        }

    .course-highlight {
        color: #ff6347; /* Highlight color */
    }

    .course-details p {
        margin-bottom: 10px;
    }

    .course-details .list-group-item {
        background-color: #003366; /* Dark navy blue for list items */
        border-color: #003366;
        color: #ffffff;
    }

        .course-details .list-group-item h4 {
            color: #ff6347; /* Header color */
        }

    .course-terms {
        color: #ff6347; /* Terms color */
        font-weight: bold;
    }

    .divider {
        border-top: 1px solid #ffffff; /* White divider */
        margin: 20px 0;
    }
</style>

